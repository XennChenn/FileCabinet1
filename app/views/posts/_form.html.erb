

<%= form_for @post do |f| %>
	<div class="form-group">
		<%= f.text_field :title, placeholder: "Title", class: "form-control" %><br>
	</div>
	
	<div class="form-group">
		<%= f.text_area :content, row: 10, placeholder: "What is in your mind?", class: "form-control" %><br>
	</div>
	
	<div class="action">
		<%= f.submit "Post", class: "btn btn-primary" %>
	</div>
	<br>
	
<% end %>